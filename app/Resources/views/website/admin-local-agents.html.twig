{% extends 'base.html.twig' %}

{% block title %} Local Agences{% endblock %}

{% block body %}
    <div class="pad">
    </div>
    <div ng-controller= "SettingsController">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-3">
                {% include 'website/sidemenu-admin.html.twig' %}
            </div>
            <div class="col-xs-12 col-md-8 col-md-offset-1 border-yellow no-padding">


                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="bg-yellow font-header">
                        <tr>
                            <th colspan="4">{{ 'admin_local_agent_list' | trans({}, "messages", lang)}}</th>
                            <th class="text-right">

                            </th>
                        </tr>
                        </thead>
                        <thead class="bg-light-gray">
                        <tr>

                            <th>{{ 'form_Country' | trans({}, "messages", lang)}}</th>

                            <th>{{ 'form_city' | trans({}, "messages", lang)}}</th>

                            <th>{{ 'form_phone_primary' | trans({}, "messages", lang)}}</th>
                            <th>{{ 'form_address' | trans({}, "messages", lang)}}</th>
                            <th></th>
                        </tr>
                        </thead>
                        {%  for local in locals %}
                        <tbody>

                        <tr>
                            <td class="">{{ local.country.country }}</td>

                            <td class="">{{ local.city }}</td>

                            <td class="">{{ local.Phone }}</td>
                            <td class="">{{ local.Address }}</td>

                            <td>
                                <button data-toggle="modal" data-target="#editagenceModal" class="btn-primary btn-xs" ng-click="getAgentInformation({{ local.localnumberid }})"  ><span class="glyphicon glyphicon-edit" title="edit"></span></button>
                            </td>
                        </tr>

                        </tbody>
                        {% endfor %}
                    </table>
                </div>




            </div>



        </div>
    </div>

        <div id="editagenceModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header bg-yellow">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Agence</h4>
                    </div>
                    <div class="modal-body">
                        <p class="error-message text-center text-bold">{[ error.message ]}</p>
                        <form method="POST" id="frm_update_agent" action="{{ path('rte_admin_agent_update') }}">

                        <div class="form-group">
                            <label for="subagCountry">Country</label>
                            <select name="subagCountry" id="subagCountry" class="form-control" name="subagCountry" ng-model="agent.subagCountry" >

                                <option value="Canada">Canada</option>
                                <option value="Costa Rica">Costa Rica</option>
                                <option value="Cuba">Cuba</option>
                                <option value="Mexico">Mexico</option>
                                <option value="United States">United States</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="cityAgence">City</label>
                            <input type="text" class="form-control" id="cityAgence" name="cityAgence" ng-model="agent.cityAgence" >
                        </div>
                        <div class="form-group">
                            <label for="phoneAgence">Phone</label>
                            <input type="text" class="form-control" id="phoneAgence" name="phoneAgence" ng-model="agent.phoneAgence" >
                        </div>
                        <div class="form-group">
                            <label for="adresseAgence">Address</label>
                            <input type="text" class="form-control" id="adresseAgence" name="adresseAgence" ng-model="agent.adresseAgence">
                        </div>
                            <input type="hidden" name="localnumberid" ng-value="agent.localnumberid" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn bg-yellow color-black" ng-click="updateAgent()">
                            <span class="glyphicon glyphicon-floppy-disk" title="Save"></span> {{ 'dash_add' | trans({}, "messages", lang) }}
                        </button>
                    </div>
                </div>

            </div>
        </div>

    </div>




    <div class="pad">
    </div>
{% endblock %}