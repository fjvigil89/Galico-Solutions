{% extends 'base.html.twig' %}

{% block title %} Sign in {% endblock %}

{% block body %}
<div class="pad">

</div>

<div class="container" ng-controller="UserController">
  <div class="row">
    <div class="col-xs-12">
      <h3>Login</h3>

      <form class="form-login" method="POST" id="frm_signin" action="{{ path('app_user_authenticate') }}">
        <h5 class="error-message text-bold text-center" ng-bind="auth.message" class=""> </h5>
        <div class="form-group">
          <label for="email">Email*</label>
          <input type="email" id="email" name="email" ng-model="user.email" required>
        </div>
        <div class="form-group">
          <label for="pwd">Password*</label>
          <input type="password" id="pwd" name="pwd" ng-model="user.pwd" required>
        </div>
        <button type="button" class="btn" ng-click="authenticate()">Login</button>
        
        <p class="lost_password"><a href="#pass1" data-toggle="modal" data-target="#forgetpasswordModal" >Forget your password?</a></p>
        <input type="hidden" ng-model="user.authUrl" value="{{ path('app_user_authenticate')  }}">
      </form>


    </div>
  </div>
</div>


  <div id="forgetpasswordModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header bg-yellow">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span>Forget my password</h4>
        </div>
        <div class="modal-body">

          <div class="form-group">
            <label for="email">Email*</label>
            <input type="email" id="email" name="email" placeholder="Please enter your email" required>
          </div>
          <p class="text-center text-bold color-red "> A temporary password has been sent to your email</p>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn bg-yellow color-black">
            <span class="glyphicon glyphicon-ok-circle" title="Close"></span> Reset
          </button>
        </div>
      </div>

    </div>
  </div>
{% endblock %}